{
  "name": "article-api",
  "version": "1.0.0",
  "description": "A RESTful API that allows users to interact with an article database",
  "main": "index.js",
  "scripts": {
    "test": "better-npm-run test",
    "build:watch": "node_modules/gulp/bin/gulp.js",
    "start:dev": "better-npm-run start:dev",
    "start:prod": "better-npm-run start:prod"
  },
  "betterScripts": {
    "test": {
      "command": "node_modules/.bin/tape spec/helpers/*.js spec/*.spec.js | faucet",
      "env": {
        "NODE_ENV": "test",
        "DATABASE_URL": "developer://localhost/article_api_test"
      }
    },
    "start:dev": {
      "command": "node_modules/.bin/nodemon dist/index.js",
      "env": {
        "NODE_ENV": "development",
        "DATABASE_URL": "developer://localhost/article_api"
      }
    },
    "start:prod": {
      "command": "node dist/index.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dking1286/article-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dking1286/article-api/issues"
  },
  "homepage": "https://github.com/dking1286/article-api#readme",
  "dependencies": {
    "better-npm-run": "0.0.13",
    "express": "^4.14.0",
    "knex": "^0.12.6",
    "pg": "^6.1.0"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.16.0",
    "babel-eslint": "^7.0.0",
    "babel-preset-airbnb": "^2.0.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.18.0",
    "eslint": "^3.7.0",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.16.0",
    "faucet": "0.0.1",
    "file": "^0.2.2",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-notify": "^2.2.0",
    "gulp-watch": "^4.3.11",
    "nodemon": "^1.11.0",
    "request": "^2.79.0",
    "supertest": "^2.0.1",
    "tape": "^4.6.3"
  }
}
